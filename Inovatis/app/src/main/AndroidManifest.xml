<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inovatis.inovatis">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Inovatis App">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".notepad.NotepadActivity" />
        <activity android:name=".notepad.EditActivity"></activity>

		<activity
            android:name=".contact.ContactList"
            android:label="@string/app_name"/>
			  <activity
            android:name=".contact.AddEdit"
            android:label="@string/title_activity_add_edit"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".contact.EditDelete"
            android:label="@string/title_activity_edit_delete"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".contact.SearchContact"
            android:label="@string/title_activity_search_contact"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>